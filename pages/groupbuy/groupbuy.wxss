page {
  /* background-color: #c06; */
   background:  linear-gradient(to bottom, rgb(255, 203 , 80) , rgb(255, 234, 189));
   height: 100%
}

.page_row {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: #c06; */
 
  background:  linear-gradient(to bottom, rgb(255, 177, 10) , rgb(255, 203 , 80))
}

.search {
  width: 80%;
}

.search_arr {
  border: rgb(240, 239, 245);
  background-color: rgb(240, 239, 245);
  opacity: 1;
  border-radius: 50rpx;
  margin-left: 20rpx;
}

.search_arr input {
  background-color: rgb(240, 239, 245);
  opacity: 0.7;
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 50rpx;
  color: #001;
}

.sousuo {
  background-color: rgb(240, 239, 245);
  margin-left: 15rpx;
  width: 15%;
  height: 60rpx;
  border: 1px solid #d0d0d0;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.radis-container {
  margin-top: 15rpx;
  border-top-left-radius: 13px;
  border-top-right-radius: 13px;
  background-color: rgb(240, 239, 245);
  overflow: hidden;
}

.shop-container {
  background-color: #fff;
  border-radius: 20rpx;
  width: 730rpx;
  height: 250rpx;
  display: flex;
  margin: 15rpx 10rpx;
  flex-direction: row;
  /* border: 1px solid #ccc; */
  position: relative;
}

.shop-img {
  width: 250rpx;
  height: 250rpx;
  border-radius: 10rpx;
  /* border-top-left-radius: 20px;
  border-bottom-left-radius: 20px; */
}

.shop-text {
  margin-left: 10rpx;
  width: 460rpx;
  height: 90rpx;
  font-size: 30rpx;
}

.shop-time {
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  color:#fff;
  font-size: 10pt;
}

.shop-timeout {
  position: absolute;
  right: 20rpx;
  bottom: 8rpx;
  padding: 0 10rpx;
  color:#fff;
  font-size: 10pt;
}

.shop-timeout-text{
  border-radius: 6rpx;
  background:  rgb(13, 190, 255);
  /* background-color: red; */
  padding: 0 5rpx;
  margin-left: 7rpx;
}

.red{
  background-color: red;
}
.blue{
   background:  rgb(13, 190, 255);
}

.shop-type {
  position: absolute;
  width: 70rpx;
  text-align: center;
  left: 260rpx;
  bottom: 8rpx;
  background: rgb(255, 103, 11);
  color:#fff;
  font-size: 10pt;
}

.shop-comment {
  position: absolute;
  left: 350rpx;
  bottom: 8rpx;
  color: #ccc;
  font-size: 10pt;
}

.shop-price {
  position: absolute;
  left: 270rpx;
  bottom: 60rpx;
  font-size: 36rpx;
}

.something {
  display: none;
}

.nothing {
  height: 1270rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.nothing-img {
  width: 200rpx;
  height: 200rpx;
}

.nothing text{
  margin-top: 30rpx;
}

.model-mask{
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background-color: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9000
}

.model-dialog{
  width: 500rpx;    
  height: 450rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -250rpx;
  margin-top: -250rpx;
  background-color: #fff;
  z-index: 9999;
}

.model-title{
  width: 500rpx;
  font-size: 38rpx;
  position: absolute;
  top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #ccc;
  padding-bottom: 20rpx;
}

.model-content{
   width: 500rpx;
  font-size: 28rpx;
  color: #bbb;
  position: absolute;
  top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.model-content-img{
  margin-top: 10rpx;
  width: 170rpx;
  height: 150rpx;
}

.model-content text{
  margin-top: 20rpx
}
.model-footer{
  width: 500rpx;
  font-size: 28rpx;
  color: #bbb;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.login-btn{
  width: 600rpx;
  background-color:rgb(255, 177, 10);
  color: #fff;
  border-radius: 0
}

.login-btn::after{
border-radius: 0
}
.hot-img{
  position: absolute;
  top: 100rpx;
  left: 250rpx;
  width: 30rpx;
  height: 30rpx;
}
.progress{
  position: absolute;
  top: 100rpx;
  left: 280rpx;
  width: 300rpx;
  height: 25rpx;
  border-radius: 25rpx;
  border: 1px solid #FF6E36;
  display: flex;
   flex-direction: row;
  align-items: center;
}
.hot-text{
  position: absolute;
  top: 95rpx;
  left: 600rpx;
  color: #FF6E36;
}
.fill{
  height: 25rpx;
  background-color: #FF6E36;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-top-left-radius:10px;
  border-bottom-left-radius:10px;
}

.hiddenhottext{
  color: #FF6E36;
  font-size: 24rpx;
}