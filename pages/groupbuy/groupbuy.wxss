page {
  background-color: #c06;
}

.page_row {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #c06;
}

.search {
  width: 80%;
}

.search_arr {
  border: rgb(240, 239, 245);
  background-color: rgb(240, 239, 245);
  opacity: 1;
  border-radius: 50rpx;
  margin-left: 20rpx;
}

.search_arr input {
  background-color: rgb(240, 239, 245);
  opacity: 0.7;
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 50rpx;
  color: #001;
}

.sousuo {
  background-color: rgb(240, 239, 245);
  margin-left: 15rpx;
  width: 15%;
  height: 60rpx;
  border: 1px solid #d0d0d0;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.radis-container {
  margin-top: 15rpx;
  border-top-left-radius: 13px;
  border-top-right-radius: 13px;
  background-color: rgb(240, 239, 245);
  overflow: hidden;
}

.shop-container {
  background-color: #fff;
  border-radius: 20rpx;
  width: 730rpx;
  height: 250rpx;
  display: flex;
  margin: 15rpx 10rpx;
  flex-direction: row;
  /* border: 1px solid #ccc; */
  position: relative;
}

.shop-img {
  width: 250rpx;
  height: 250rpx;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}

.shop-text {
  margin-left: 10rpx;
  width: 460rpx;
  font-size: 30rpx;
}

.shop-time {
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
  border: 1px solid #0f0;
  color: #0f0;
  font-size: 10pt;
}

.shop-timeout {
  position: absolute;
  right: 30rpx;
  bottom: 8rpx;
  border: 1px solid #0f0;
  color: #0f0;
  font-size: 10pt;
}

.shop-type {
  position: absolute;
  left: 260rpx;
  bottom: 8rpx;
  border: 1px solid #f00;
  color: #f00;
  font-size: 10pt;
}

.shop-comment {
  position: absolute;
  left: 350rpx;
  bottom: 8rpx;
  color: #ccc;
  font-size: 10pt;
}

.shop-price {
  position: absolute;
  left: 270rpx;
  bottom: 60rpx;
  font-size: 10pt;
}

.something {
  display: none;
}

.nothing {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 80rpx 0;
}

.nothing-img {
  width: 200rpx;
  height: 200rpx;
}

.model-mask{
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background-color: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9000
}

.model-dialog{
  width: 500rpx;    
  height: 450rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -250rpx;
  margin-top: -250rpx;
  background-color: #fff;
  z-index: 9999;
  border-radius: 20rpx;
}

.model-title{
  width: 500rpx;
  font-size: 38rpx;
  position: absolute;
  top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #ccc;
  padding-bottom: 20rpx;
}

.model-content{
   width: 500rpx;
  font-size: 28rpx;
  color: #bbb;
  position: absolute;
  top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.model-content-img{
  width: 150rpx;
  height: 150rpx;
}
.model-footer{
  width: 500rpx;
  font-size: 28rpx;
  color: #bbb;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.login-btn{
  width: 500rpx;
  background-color:  	#32CD32;
  color: #fff;

}