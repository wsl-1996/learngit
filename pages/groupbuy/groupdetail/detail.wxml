<view class='topbar'>
  <text class='goods' bindtap='ongoods'>{{goods}}</text>
  <text class='detail'>{{detail}}</text>
  <text class='comment' bindtap='oncomment'>{{comment}}</text>
</view>
<view class='margin-container'  bindtouchstart="touchStart" bindtouchend="touchEnd">
  <view>
    <view class='mainbody-name' wx:for='{{parametername}}' wx:for-item='nameitem'>{{nameitem}}</view>
  </view>
  <view>
    <view class='mainbody' wx:for='{{parameter}}'>
      <view class='main-text'>{{item}}</view>
    </view>
  </view>
</view>