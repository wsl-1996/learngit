.topbar {
  width: 750rpx;
  height: 100rpx;
  background:  linear-gradient(to bottom, rgb(255, 177, 10) , rgb(255, 203 , 80));
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 1;
  font-size: 28rpx;
  color: #fff;
}

