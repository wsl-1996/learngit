.topbar {
  width: 750rpx;
  height: 50rpx;
  background:  linear-gradient(to bottom, rgb(255, 177, 10) , rgb(255, 203 , 80));
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 1;
  font-size: 28rpx;
  color: #fff;
}

.goods, .detail, .comment {
  width: 120rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.detail {
  font-size: 36rpx;
  font-weight: 700;
}
.margin-container{
  margin-top: 80rpx;
}

.mainbody {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc
}

.flex-container {
