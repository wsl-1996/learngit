@import '/pages/stars/stars-template.wxss';
.container1{
  width: 750rpx;
  height: auto;
  position: relative;
  border-top: 1px solid #fff;
}
 .topbar{
  width: 750rpx;
  height: 100rpx;
background:  linear-gradient(to bottom, rgb(255, 177, 10) , rgb(255, 203 , 80));
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 1;
  font-size: 28rpx;
  color: #fff;
}

.goods , .detail , .comment{
  width: 120rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  
}

.comment{
    font-size: 36rpx;
  font-weight: 700;
}

.totoalcomment{
  display: flex;
  flex: row;
  align-items: center;
  min-height: 50rpx;
  margin-top: 80rpx;
  background-color: #fff;
  width: 750rpx;
  position: absolute;
  top: 45rpx
}
.commentnum{
  margin-left: 20rpx;
  color: #ccc;

}
.goodcomment{
  color: #f00;
  position: absolute;
  right: 20rpx;

}

.usercomment{
  width: 730rpx;
  /* position: absolute;
  top: 200rpx;
  left: 0rpx; */
  margin:120rpx 0 -100rpx 0;
  background-color: #fff;
}

.usercomment-title{
  width: 730rpx;

  display: flex;
  flex-direction: row
}
.Avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.userName{
  margin-top: 30rpx;
  margin-left: 10rpx
}

.commentTime{
  margin-top: 30rpx;
  margin-left: 200rpx;
}

.commentContent{
  margin: 10rpx 0 0 20rpx;
}
.img-container{
  width: 730rpx;
  height: auto;
}

.img-container image{
