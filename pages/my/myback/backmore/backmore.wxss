/* pages/my/myback/backmore/backmore.wxss */
@import '/pages/logofooter/logofooter-template.wxss';

page {
  background: #eee;
}

.container1 {
  width: 750rpx;
}

.sub-text {
  background: linear-gradient(to bottom, rgb(255, 177, 10), rgb(255, 203, 80));
  width: 750rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.sub-cashback {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sub-cashback-item {
}

.cash-text {
  margin-left: 15rpx;
  margin-bottom: 10rpx;
}

.line-container {
  width: 1px;
  height: 100rpx;
  background-color: #fff;
}

.sub-footer {
  width: 180rpx;
  margin: 50rpx 0 0 300rpx;
  font-size: 28rpx;
  color: #ccc;
  border-bottom: 1px solid #ccc;
}

.explain-view{
  background:linear-gradient(to right,#FCE5BB,#F4D19C);
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  margin-left: -30rpx;
  padding-left: 20rpx;
  border-top-left-radius: 10rpx;
   border-bottom-left-radius: 10rpx;
   font-weight: 700;
}

.sub-detail {
  width: 660rpx;
  background-color: #FFF6EC;
  line-height: 50rpx;
  margin-top: 50rpx;
  margin-left: 25rpx;
  padding: 20rpx;
  padding-bottom: 50rpx;
}

.cash-title {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #fff;
}

.balance-content{
 margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.balance-img{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}
.cash-content {
  background: rgba(0, 0, 0, 0.4);
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.cash-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.logo-view {
  width: 200rpx;
  height: 100rpx;
  position: absolute;
  bottom: 100rpx;
  left: 275rpx;
}

.model-mask {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background-color: #000;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9000;
}

.model-rule-dialog {
  width: 600rpx;
  height: 700rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -350rpx;
  background-color: #fff;
  z-index: 9999;
  border-radius: 10rpx;
}

.model-rule-title {
  width: 600rpx;
  font-size: 32rpx;
  position: absolute;
  top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
}

.model-rule-content {
  width: 600rpx;
  font-size: 28rpx;
  color: #676a6c;
  position: absolute;
  top: 100rpx;
  left: 30rpx;
  display: flex;
  flex-direction: column;
}

.model-rule-footer {
  width: 600rpx;
  height: 100rpx;
  background-color: rgb(248, 147, 14);
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.balance-text{
  margin-top: 50rpx;
  color: #ccc
}

.model-rule-dialog input {
  width: 500rpx;
  border-bottom: 1px solid #ccc;
}

.close-img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}