<view class="container1">
  <view class="userinfo">
    <!-- <button class='login-btn' open-type='getUserInfo' bindgetuserinfo='bindGetuserinfo' class="{{is_hidden==false? '':'hidden'}}">点击授权</button> -->
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" type="userNickName"></open-data>
    <text class='userinfo-manage' bindtap='accountmanger'>账号管理>></text>
    <button class='clearstorage' bindtap='clearstorage'>清除缓存</button>
  </view>

  <view class='order-item'>
    <text class='order-sub'>我的订单</text>
    <text class='order-more' bindtap='getinmyorder'>更多>></text>
    <view class="iconimg0" bindtap='gotopay'>
      <image src='{{iconimg[0]}}'></image>
      <text>待支付</text>
    </view>
    <view class="iconimg1" bindtap='gotoDeliver'>
      <image src='{{iconimg[1]}}'></image>
      <text>待发货</text>
    </view>
    <view class="iconimg2" bindtap='gotoCollect'>
      <image src='{{iconimg[2]}}'></image>
      <text>待收货</text>
    </view>
    <view class="iconimg3" bindtap='gotocomment'>
      <image src='{{iconimg[3]}}'></image>
      <text>待评价</text>
    </view>
    <view class="iconimg4" bindtap='gotoback'>
      <image src='{{iconimg[4]}}'></image>
      <text>退换货</text>
    </view>



  </view>

  <view class='address-item'>
    <text class='sub-myaddress'>我的地址</text>
    <text class='sub-address-manage' bindtap='addressmanage'>管理>></text>
    <view class='sub-address' wx:for="{{defaultaddress}}" wx:key="">
      <text>{{item[0].userProvince}}</text>
      <text>{{item[0].userCity}}</text>
      <text>{{item[0].userDistricts}}</text>
      <text>{{item[0].userAddressDetails}}</text>
    </view>
  </view>

  <view class='count-item'>
    <text class='sub-mycount'>我的客团账户</text>
    <view class='subitem-count'>
      <text class='sub-gradetext'>账户等级</text>
      <text class='sub-grade'>{{userGrade}}</text>
    </view>
    <view class='subitem-back'>
      <text class='sub-backtext'>上月返现</text>
      <text class='sub-back' wx:for='{{cashback}}' wx:key=''>{{index==0? '￥'+item.cashbackmoney:""}}</text>
      <text class='sub-back-more' bindtap='gotobackmore'>更多</text>
    </view>
    <view class='subitem-recommend'>
      <text class='sub-rectext'>我的推荐</text>
      <view class='sub-rec' wx:for="{{}}" wx:key=''>
        <image src='{{}}'></image>
      </view>
      <text class='sub-rec-more' bindtap='gotorecmore'>更多</text>
    </view>
    <!-- <text class='sub-share'>分享个人名片</text> -->
  </view>
</view>