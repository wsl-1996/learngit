@import '/pages/logofooter/logofooter-template.wxss';
.reason-content{
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  margin-bottom: 15rpx;
}
.reason-title{
   display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.reason-img{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 15rpx;
}
.input{
  width: 600rpx;
  height: 200rpx;
  border: 1px solid #ccc 
}

.commit-btn{
  width: 750rpx;
  height: 80rpx;
  background-color: rgb(238, 175, 92);
  font-size: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.logofooter-container{
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  margin-left: -100rpx;
}