<import src='/pages/logofooter/logofooter-template.wxml'/>
<view class='container1'>
  <view class='input-content'>
    <input placeholder="请输入11位手机号" class="input-textone" maxlength="11" type='number' bindinput='listenerinput'>
    </input>
  </view>
  <view class='input-content'>
    <input placeholder="请输入短信验证码" class="input-texttwo" maxlength="6" type='number' bindinput='lintenercode'>
    </input>
    <view class='send-text1' bindtap='sendphonecode'>
      <text>获取验证码</text>
    </view>

  </view>
  <view class='send-text2' bindtap='checkphonecode'>
    <text>确定</text>
  </view>
 <view class='logofooter-container'>
    <template is='logofooter-template'/>
  </view>
</view>